<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/padding_small"
    app:cardCornerRadius="@dimen/padding_small"
    android:layout_margin="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/prod_img"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:id="@+id/prod_name"


                android:textSize="@dimen/text_large"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/price_old"
                android:layout_marginRight="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_old"

                android:layout_alignParentRight="true"
                android:layout_above="@id/layout_2"

                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:background="@drawable/strick_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_2"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prod_price"

                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_toRightOf="@id/prod_rating"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:textColor="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prod_rating"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    style="@style/ratingBarSmall"/>

            </RelativeLayout>


        </RelativeLayout>






    </LinearLayout>




</android.support.v7.widget.CardView>